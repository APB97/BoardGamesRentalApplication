@model BoardGamesRentalApplication.Models.User

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <section class="account-edit">
        <div class="row">
            <div class="col">
                <div class="row">
                    <h2>Edytuj dane</h2>
                    <div class="card text-center bg-light" style="width: 100%;">
                        <div class="card-body">
                            <div class="form">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form">
                                        @Html.ValidationSummary(true, "", new { @class = "alert" })
                                        @Html.HiddenFor(model => model.UserId)

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.FirstName)
                                                @Html.EditorFor(model => model.FirstName)
                                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.LastName)
                                                @Html.EditorFor(model => model.LastName)
                                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.PhoneNumber)
                                                @Html.EditorFor(model => model.PhoneNumber)
                                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.Street)
                                                @Html.EditorFor(model => model.Street)
                                                @Html.ValidationMessageFor(model => model.Street, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.HouseNumber)
                                                @Html.EditorFor(model => model.HouseNumber)
                                                @Html.ValidationMessageFor(model => model.HouseNumber, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.ApartmentNumber)
                                                @Html.EditorFor(model => model.ApartmentNumber)
                                                @Html.ValidationMessageFor(model => model.ApartmentNumber, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.PostalCode)
                                                @Html.EditorFor(model => model.PostalCode)
                                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div>
                                            <div class="form-input">
                                                @Html.LabelFor(model => model.City)
                                                @Html.EditorFor(model => model.City)
                                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "alert" })
                                            </div>
                                        </div>

                                        <div class="row">
                                            <input type="submit" value="Zapisz" class="btn" />
                                        </div>
                                        <div class="row">
                                            @{
                                                int userId = (int)Session["UserId"];
                                                @Html.ActionLink("Powrót", "Details", "User", new { id = userId }, new { @class = "btn" })
                                            }
                                        </div>


                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <div class="row">
            <div class="col-4">
                <a href="#">Strona Główna</a>
                <a href="#">O nas</a>
                <a href="#">Nasze gry</a>
            </div>
            <div class="col-4">
                Copyright 2019. All rights reserved.
            </div>
            <div class="col-4 logo">
                <img src="~/images/logo.png" />
            </div>
        </div>
    </footer>
</div>
