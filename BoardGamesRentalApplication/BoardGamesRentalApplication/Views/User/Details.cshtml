@model BoardGamesRentalApplication.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <section class="account">
        <div class="row">
            <h2>Mój profil</h2>
        </div>
        <div class="row">
            <div class="col justify-content-center">
                <div class="card text-center bg-light" style="width: 100%;">
                    <div class="card-body">

                        <p class="user-data">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</p>
                        <span class="signature">Imię i nazwisko</span>

                        <p class="user-data">ul. @Html.DisplayFor(model => model.Street) @Html.DisplayFor(model => model.HouseNumber)/@Html.DisplayFor(model => model.ApartmentNumber)</p>
                        <span class="signature">Ulica</span>

                        <p class="user-data">@Html.DisplayFor(model => model.City)</p>
                        <span class="signature">Miejscowość</span>

                        <p class="user-data">@Html.DisplayFor(model => model.PostalCode)</p>
                        <span class="signature">Kod pocztowy</span>

                        <p class="user-data">jan.kowalski@mail.pl</p>
                        <span class="signature">E-mail</span>

                        @Html.ActionLink("Edytuj dane", "Edit", new { id = (int)Session["UserId"] }, new { @class = "btn" })
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <div class="row">
            <div class="col-4">
                <a href="#">Strona Główna</a>
                <a href="#">O nas</a>
                <a href="#">Nasze gry</a>
            </div>
            <div class="col-4">
                Copyright 2019. All rights reserved.
            </div>
            <div class="col-4 logo">
                <img src="~/images/logo.png" />
            </div>
        </div>
    </footer>
</div>
