@model IEnumerable<BoardGamesRentalApplication.DAL.Models.Reservation>

@{
    ViewBag.Title = "Zarządzanie rezerwacjami";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section class="admin">
        <div class="row">
            <h2>@ViewBag.Title</h2>
        </div>
        <table class="table table-hover table-dark">
            <tr>
                <th style="min-width: 250px;">
                    @Html.DisplayNameFor(model => model.RentalStartDate)
                </th>
                <th style="min-width: 250px;">
                    @Html.DisplayNameFor(model => model.RentalEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoardGame.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReservationStatus.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RentalStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RentalEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoardGame.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservationStatus.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.ReservationId })
                    </td>
                </tr>
            }

        </table>

    </section>
</div>

