@using PagedList
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@model IPagedList<BoardGamesRentalApplication.DAL.Models.Reservation>

@{
    ViewBag.Title = "Zarządzanie rezerwacjami";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().RentalStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().RentalEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().User.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BoardGame.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ReservationStatus.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RentalStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentalEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoardGame.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservationStatus.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReservationId })
        </td>
    </tr>
}

</table>

<div class="row">

    @Html.PagedListPager(Model, page => Url.Action("Index",
new { page }),
new PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    UlElementClasses = new string[] { "pagination justify-content-end" },
    ContainerDivClasses = new[] { "pagination" },
    DisplayLinkToNextPage = PagedListDisplayMode.Always,
    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
    LinkToPreviousPageFormat = "Previous",
    LinkToNextPageFormat = "Next"
})
</div>
