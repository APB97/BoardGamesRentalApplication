@model BoardGamesRentalApplication.Models.Reservation

@{
    ViewBag.Title = "Index";
}

<h2>Rezerwacja</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReservationId)
    @Html.HiddenFor(model => model.ReservationStatusId)
    <div>
        <h4>Reservation</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RentalStartDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RentalStartDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RentalEndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RentalEndDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Count)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Count)
            </dd>

            <dt>
                @Html.HiddenFor(model => model.UserId)
            </dt>

            <dd>
                @Html.HiddenFor(model => model.BoardGameId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BoardGameName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BoardGameName)
            </dd>

        </dl>
    </div>
    <form action="Index" method="post">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zarezerwuj">
            </div>
        </div>
    </form>
}
