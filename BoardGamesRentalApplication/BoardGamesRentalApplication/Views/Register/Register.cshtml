@model BoardGamesRentalApplication.Models.RegisterUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="img-bg img-bg-register">
        <div class="photo_cover">
            <section class="register">                
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col-4">
                                    <h2>Mam konto</h2>
                                    <p class="create-account">
                                        Posiadasz już konto?
                                        <br />Kliknij "Zaloguj", aby przejść do formularza
                                        logowania. <br>
                                        <button class="btn btn-full" onclick="location.href='/Login/Login';return false;">Zaloguj</button>
                                    </p>
                                </div>
                                <div class="col-8">
                                    <h2>Nie mam konta</h2>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "alert" })
                                        <form action="Register" method="post">
                                            @Html.LabelFor(model => model.Username)
                                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "alert" })
                                            <div class="alert">
                                                @Html.Label("", Convert.ToString((string)ViewBag.DuplicateUsernameMessage))
                                            </div>

                                            @Html.LabelFor(model => model.FirstName)
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "alert" })

                                            @Html.LabelFor(model => model.LastName)
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "alert" })

                                            @Html.LabelFor(model => model.Email)
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "alert" })
                                            <div class="alert">
                                                @Html.Label("", Convert.ToString((string)ViewBag.DuplicateEmailMessage))
                                            </div>

                                            @Html.LabelFor(model => model.Password)
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "alert" })
                                            <div class="alert">
                                                @Html.Label("", Convert.ToString((string)ViewBag.Message))
                                            </div>

                                            @Html.LabelFor(model => model.ConfirmPassword)
                                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "alert-input" } })
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "alert" })
                                            <div class="alert">
                                                @Html.Label("", Convert.ToString((string)ViewBag.Message))
                                            </div>
                                            <input type="submit" value="Zarejestruj" class="btn btn-full">
                                        </form>
                                    }
                                </div>                               
                            </div>                            
                        </div>
                    </div>                
            </section>
        </div>
    </div>
    <footer>
        <div class="row">
            <div class="col-4">
                <a href="#">Strona Główna</a>
                <a href="#">O nas</a>
                <a href="#">Nasze gry</a>
            </div>
            <div class="col-4">
                Copyright 2019. All rights reserved.
            </div>
            <div class="col-4 logo">
                <img src="~/images/logo.png" />
            </div>
        </div>
    </footer>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
