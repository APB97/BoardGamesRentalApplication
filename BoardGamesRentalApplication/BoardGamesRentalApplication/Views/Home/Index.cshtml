@model BoardGamesRentalApplication.Models.HomePageData

@{
    ViewBag.Title = "Board Games Universe";
}

<div class="container">
    <section class="slider">
        <div class="bd-example">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/carousel/competition.jpg" class="d-block w-100" alt="Los Angeles" style="width:100%;">
                        <div class="carousel-caption">
                            <h5>Mega oferta gier!</h5>
                            <p>Szybko i łatwo znajdź grę idealną dla siebie i Twoich przyjaciół.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img src="~/images/carousel/game.jpg" class="d-block w-100" alt="Chicago" style="width:100%;">
                        <div class="carousel-caption">
                            <h5>First slide label</h5>
                            <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img src="~/images/carousel/play.jpg" class="d-block w-100" alt="New york" style="width:100%;">
                        <div class="carousel-caption">
                            <h5>First slide label</h5>
                            <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
        </div>
    </section>
    <section class="search_form">
        <div class="row">
            <h2>Wyszukaj grę dla siebie</h2>
        </div>
        <div class="row form-horizontal">
            @using (Html.BeginForm("Index", "BoardGamesOffer", FormMethod.Post))
            {
                @Html.EditorFor(x => x.FilterParameters)
                <input class="btn" type="submit" value="Szukaj" />
            }
        </div>
    </section>
    <section class="recommended">
        <div class="row">
            <h2>Polecamy</h2>
        </div>
        <div class="row">
            @{
                foreach (var item in Model.RecommendedBoardGames.Where((item, index) => index < 4 || index > 0))
                {
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="recommended_panel">
                            <table>

                                <tr>
                                    <td colspan="2">
                                        <div class="game_photo" style="background-image: url('../../images/board1.jpg');">
                                            <div class="photo_cover">
                                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Kategoria</td>
                                    <td>@Html.DisplayFor(modelItem => item.BoardGameCategoryName)</td>
                                </tr>
                                <tr>
                                    <td>Wydawca</td>
                                    <td>@Html.DisplayFor(modelItem => item.BoardGamePublisherName)</td>
                                </tr>
                                <tr>
                                    <td>Cena za dzień</td>
                                    <td>@Html.DisplayFor(modelItem => item.RentalCostPerDay)zł</td>
                                </tr>
                                <tr>
                                    <td>Stan</td>
                                    <td>@Html.DisplayFor(modelItem => item.BoardGameStateName)</td>
                                </tr>
                            </table>
                            <span class="more"><a href="#">@Html.ActionLink("Więcej>>>", "Details", "BoardGameDetailsOffer", new { boardGameId = item.BoardGameId }, null)</a></span>
                        </div>
                    </div>
                }
            }
        </div>

    </section>
    <section class="rate">
        <div class="row">
            <h2>Opinie klientów</h2>
        </div>
        <div class="row">
            @{
                foreach (var item in Model.FristThreeBoardGameNote.Where((item, index) => index < 3 || index > 0))
                {
                    <div class="col-12 col-sm-12 col-md-4">
                        <blockquote>
                            @Html.DisplayFor(modelItem => item.Content)
                            <cite><img src="~/images/person.jpg" alt="">@Html.DisplayFor(modelItem => item.Author)</cite>
                        </blockquote>
                    </div>
                }
            }
        </div>
    </section>
    <footer>
        <div class="row">
            <div class="col-4">
                <a href="#">Strona Główna</a>
                <a href="#">O nas</a>
                <a href="#">Nasze gry</a>
            </div>
            <div class="col-4">
                Copyright 2019. All rights reserved.
            </div>
            <div class="col-4 logo">
                <img src="~/images/logo.png" />
            </div>
        </div>
    </footer>
</div>