@model BoardGamesRentalApplication.Models.RegisterUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- content form -->
    <div class="img-bg">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="photo_cover">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <section class="login_register">
                    <div class="row">
                        <div class="col-6 panel-left">
                            <div class="row">
                                <h2>Mam konto</h2>
                            </div>
                            <form action="Login" method="post">
                                @if (TempData["SuccessRegisterNewUserMessage"] != null)
                                {
                                    <div class="alert alert-success">@TempData["SuccessRegisterNewUserMessage"]</div>
                                }
                                @Html.LabelFor(model => model.Username)
                                @Html.EditorFor(model => model.Username)
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                <div class="text-danger">
                                    @Html.Label("", Convert.ToString((string)ViewBag.UserDoesntExistMessage))
                                </div>
                                @Html.LabelFor(model => model.Password)
                                @Html.EditorFor(model => model.Password)
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <div class="text-danger">
                                    @Html.Label("", Convert.ToString((string)ViewBag.IncorrectPasswordMessage))
                                </div>
                                <input type="submit" value="Zaloguj" class="btn btn-full">
                            </form>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <h2>Nie mam konta</h2>
                            </div>
                            <p class="create-account">
                                Nie masz konta? Kliknij "Załóż konto", aby przejść do formularza
                                rejestracji. <br>
                                <button class="btn btn-full" onclick="location.href='@Url.Action("Register", "Register")';return false;">Załóż konto</button>

                            </p>
                        </div>
                    </div>
                </section>

            </div>
        }
    </div>
    <footer>
        <div class="row">
            <div class="col-4">
                <a href="#">Strona Główna</a>
                <a href="#">O nas</a>
                <a href="#">Nasze gry</a>
            </div>
            <div class="col-4">
                Copyright 2019. All rights reserved.
            </div>
            <div class="col-4 logo">
                LOGO
            </div>
        </div>
    </footer>
    <!-- //content form -->
</div>

<!-- //content -->
